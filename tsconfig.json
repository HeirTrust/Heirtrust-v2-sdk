{
  "compilerOptions": {
    "target": "esnext",
    "allowJs": true,
    "module": "esnext",
    "outDir": "./dist",   
    "rootDir": "./src",   
    "baseUrl": "./src",
    "strict": true,   
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true
  },
  "include": [
    "src/**/*.ts", "src/index.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
